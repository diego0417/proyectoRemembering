<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:id="@+id/relat_sug_raro_title"
        android:gravity="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Ayudanos a mejorar"
            android:textSize="20dp"
            android:layout_marginTop="20dp"
            android:textColor="@color/negro"
            android:id="@+id/textView2" />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@+id/relat_sug_raro_title"
        android:id="@+id/relat_sug_raro_subtitle"
        android:gravity="center_horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Tus segerencias son de gran valor para nuestro staff"
            android:textSize="15dp"
            android:textColor="@color/black_grey"
            android:id="@+id/textView3" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/relat_sug_raro_subtitle"
        android:id="@+id/relat_sug_raro_cotnenido"
        >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/descripcion"
            android:id="@+id/imageView5Sug"
            android:layout_marginLeft="16dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:hint="Sugerencias"
            android:inputType="textMultiLine"
            android:lines="5"
            android:gravity="top|left"
            android:id="@+id/txtSugerencia"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_toRightOf="@+id/imageView5Sug" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/relat_sug_raro_bonton"
        android:layout_below="@+id/relat_sug_raro_cotnenido"
        android:layout_marginTop="48dp"
        android:gravity="center"
        >

        <Button
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:text="LISTO"
            android:id="@+id/btnTerminar_Sugerencia"
            android:background="@drawable/counter_solicitud"
            android:textColor="@color/color_secundario_contraste"


            />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/relat_sug_raro_bonton"
        android:id="@+id/relat_sug_raro_final"
        android:gravity="center_horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Tus sugerencias son enviadas de forma anonima y automatica."
            android:textSize="15dp"
            android:textColor="@color/color_secundario"
            android:id="@+id/textView4" />
    </RelativeLayout>



</RelativeLayout>