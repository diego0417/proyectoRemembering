<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"

    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"

    android:paddingRight="@dimen/activity_horizontal_margin"

    android:paddingTop="@dimen/activity_vertical_margin"

    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"

    android:background="#fffafbfd"
    android:weightSum="1">



    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="160dp"
        android:id="@+id/background_MiPerfil"
        android:src="@drawable/fondoperfil5"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="false"
        android:adjustViewBounds="false"
        android:padding="0dp" />


    <ImageView
        android:layout_marginTop="55dp"
        android:layout_width="150dp"
        android:layout_marginLeft="90dp"
        android:layout_height="150dp"
        android:id="@+id/imgUsuario_MiPerfil"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Matias Sosa"
        android:textSize="20dp"
        android:id="@+id/nombreCompleto_MiPerfil"
        android:textStyle="bold"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="E-mail"
        android:id="@+id/textView"
        android:textSize="12dp"
        android:layout_alignBottom="@+id/imageView2"
        android:layout_alignStart="@+id/txtEmail_Perfil" />
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/emailn"
        android:id="@+id/imageView2"
        android:layout_alignTop="@+id/txtEmail_Perfil"
        android:layout_toEndOf="@+id/btnVolver_MiPerfil" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtEmail_Perfil"
        android:text="matiassosa@gmail.com"
        android:layout_marginTop="34dp"
        android:layout_below="@+id/nombreCompleto_MiPerfil"
        android:layout_alignStart="@+id/nombreCompleto_MiPerfil" />

    <Button
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:drawableLeft="@drawable/flechabla"
        android:background="@android:color/transparent"
        android:id="@+id/btnVolver_MiPerfil"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/fecha"
        android:id="@+id/imageView3"
        android:layout_marginTop="34dp"
        android:layout_below="@+id/imageView2"
        android:layout_alignStart="@+id/imageView2" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtFechaNacimiento_MiPerfil"
        android:text="04/06/1992"
        android:layout_alignTop="@+id/imageView3"
        android:layout_alignStart="@+id/textView" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Fecha de Nacimiento"
        android:id="@+id/textView3"
        android:textSize="12dp"
        android:layout_below="@+id/txtFechaNacimiento_MiPerfil"
        android:layout_alignStart="@+id/txtFechaNacimiento_MiPerfil" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/sexo"
        android:id="@+id/imageView4"
        android:layout_marginTop="27dp"
        android:layout_below="@+id/imageView3"
        android:layout_toEndOf="@+id/btnVolver_MiPerfil" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtSexo_MiPerfil"
        android:text="Masculino"
        android:layout_alignTop="@+id/imageView4"
        android:layout_alignStart="@+id/textView3" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sexo"
        android:id="@+id/textView5"
        android:textSize="12dp"
        android:layout_below="@+id/txtSexo_MiPerfil"
        android:layout_alignStart="@+id/txtSexo_MiPerfil" />


</RelativeLayout>
