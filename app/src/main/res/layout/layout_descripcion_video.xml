<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="300dp"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/titulo_video"
        android:layout_marginStart="51dp"
        android:layout_marginTop="70dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:id="@+id/imageView" />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Título"
        android:layout_alignTop="@+id/imageView"
        android:layout_toEndOf="@+id/imageView"
        android:layout_marginStart="38dp"
        android:id="@+id/txtTitulo_DescVideo" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/descripcion"
        android:layout_marginTop="30dp"
        android:id="@+id/imageView5"
        android:layout_below="@+id/txtTitulo_DescVideo"
        android:layout_alignStart="@+id/imageView" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Descripción"
        android:layout_marginTop="30dp"
        android:id="@+id/txtDescripcion_DescVideo"
        android:layout_below="@+id/imageView"
        android:layout_alignStart="@+id/txtTitulo_DescVideo" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/calendar"
        android:layout_marginTop="39dp"
        android:id="@+id/imageView6"
        android:layout_below="@+id/imageView5"
        android:layout_alignStart="@+id/imageView5" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Fecha Desbloqueo"
        android:id="@+id/txtFechaDesbloqueo_DescVideo"
        android:layout_alignBottom="@+id/imageView6"
        android:enabled="false"
        android:layout_alignStart="@+id/txtDescripcion_DescVideo" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Selecciona Fecha"
        android:id="@+id/btnFecha_DescVideo"
        android:background="@color/color_secundario"
        android:textColor="#ffffff"
        android:layout_alignStart="@+id/txtFechaDesbloqueo_DescVideo"
        android:layout_below="@+id/txtFechaDesbloqueo_DescVideo" />

    <RadioGroup xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"

        android:layout_below="@+id/btnFecha_DescVideo"
        android:layout_alignStart="@+id/imageView6"
        android:id="@+id/radioGroup">

    </RadioGroup>



    <RadioButton android:id="@+id/radio_amigos_DescVideo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Amigos"
        android:layout_below="@+id/textView2"
        android:layout_alignStart="@+id/textView2" />

    <RadioButton android:id="@+id/radio_publico_DescVideo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Público"
        android:layout_below="@+id/textView2"
        android:layout_toEndOf="@+id/radio_amigos_DescVideo" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/visibilidad"
        android:id="@+id/imageView7"
        android:layout_marginTop="15dp"
        android:layout_below="@+id/radioGroup"
        android:layout_alignEnd="@+id/imageView6" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Visibilidad"
        android:textSize="18dp"
        android:id="@+id/textView2"
        android:layout_alignBottom="@+id/imageView7"
        android:layout_alignStart="@+id/btnFecha_DescVideo" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="LISTO"
        android:id="@+id/btnTerminar_DescVideo"
        android:background="@color/color_secundario"
        android:textColor="#ffffff"
        android:layout_below="@+id/radio_amigos_DescVideo"
        android:layout_alignStart="@+id/radio_amigos_DescVideo"
        android:layout_alignEnd="@+id/btnFecha_DescVideo"
        android:layout_marginTop="20dp"/>

</RelativeLayout>