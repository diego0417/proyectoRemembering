<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"

    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"

    android:paddingRight="@dimen/activity_horizontal_margin"

    android:paddingTop="@dimen/activity_vertical_margin"

    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"

    android:background="#fffafbfd"
    android:weightSum="1">



    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="160dp"
        android:id="@+id/background_Friend"
        android:src="@drawable/fondoperfil5"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="false"
        android:adjustViewBounds="false"
        android:padding="0dp" />


    <com.github.siyamed.shapeimageview.CircularImageView
        android:layout_marginTop="55dp"
        android:layout_width="150dp"
        android:layout_marginLeft="90dp"
        android:layout_height="150dp"
        android:id="@+id/imgUsuario_PerfilAmigo"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Matias Sosa"
        android:textSize="20dp"
        android:id="@+id/nombreCompleto_PerfilAmigo"
        android:textStyle="bold"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="E-mail"
        android:id="@+id/textView"
        android:textSize="12dp"
        android:layout_alignTop="@+id/imageView2"
        android:layout_alignStart="@+id/imgUsuario_PerfilAmigo" />
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/emailn"
        android:id="@+id/imageView2"
        android:layout_marginStart="28dp"
        android:layout_alignBottom="@+id/txtEmail_PerfilAmigo"
        android:layout_alignParentStart="true" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtEmail_PerfilAmigo"
        android:text="matiassosa@gmail.com"
        android:layout_marginTop="35dp"
        android:layout_below="@+id/nombreCompleto_PerfilAmigo"
        android:layout_alignStart="@+id/textView" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/fecha"
        android:id="@+id/imageView3"
        android:layout_marginRight="24dp"
        android:layout_below="@+id/imageView2"
        android:layout_alignStart="@+id/imageView2"
        android:layout_marginTop="22dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtFechaNacimiento_PerfilAmigo"
        android:text="04/06/1992"
        android:layout_alignTop="@+id/imageView3"
        android:layout_alignStart="@+id/textView" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Fecha de Nacimiento"
        android:id="@+id/textView3"
        android:textSize="12dp"
        android:layout_below="@+id/txtFechaNacimiento_PerfilAmigo"
        android:layout_alignStart="@+id/txtFechaNacimiento_PerfilAmigo" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/sexo"
        android:id="@+id/imageView4"
        android:layout_marginRight="24dp"
        android:layout_below="@+id/imageView3"
        android:layout_alignStart="@+id/imageView3"
        android:layout_marginTop="28dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtSexo_PerfilAmigo"
        android:text="Masculino"
        android:layout_alignTop="@+id/imageView4"
        android:layout_alignStart="@+id/textView3" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sexo"
        android:id="@+id/textView5"
        android:textSize="12dp"
        android:layout_below="@+id/txtSexo_PerfilAmigo"
        android:layout_alignStart="@+id/txtSexo_PerfilAmigo" />

    <Button
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/btnAgregarAmigo_PerfilAmigo"
        android:background="@drawable/btn_circle"
        android:layout_alignParentBottom="true"
        android:layout_alignEnd="@+id/background_Friend" />

    <Button
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/btnAceptarSolicitud_PerfilAmigo"
        android:background="@drawable/btn_aceptar"
        android:layout_alignParentBottom="true"
        android:layout_alignEnd="@+id/background_Friend" />

    <Button
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/btnbloquear_PerfilAmigo"
        android:background="@drawable/btn_bloquear"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/btnAgregarAmigo_PerfilAmigo" />


</RelativeLayout>